@using Bazar.Models




@if (Main.GetCars().Count == 0)
{
    <p>Currently there are no cars</p>
    <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="SellCar">Be the first to sell a car!</a>

}
else
{
    @foreach (CarModel car in Main.GetCars())
    {
       
          
                        <div class="col-md-4">
                            <div class="card mb-4 box-shadow">
                                <img class="card-img-top" src="@car.Fotografia" alt="img" width="300" height="200">
                                <div class="card-body">
                                    <p class="card-text">@car.Marca @car.Modelul</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            @Html.ActionLink("More Details", "CarDetails", new { id = @car.Id }, new { @class = "btn btn-sm btn-outline-secondary" })
                                            @Html.ActionLink("Remove", "DeleteCar", new { id = @car.Id }, new { @class = "btn btn-outline-danger" })
                                        </div>
                                        <small class="text-muted">@String.Format("{0:n0}", car.Pretul) Lei</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                
       
            }
            }
